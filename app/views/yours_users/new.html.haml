%h1 新規登録

%nav.justify-content-end
  = link_to '一覧', yours_users_path, class: 'nav-link'

= form_with model: @yours_user, local: true do |f|
  .form-group
    = f.label :login_id
    = f.text_field :login_id, class: 'form-control', id: 'yours_user_login_id'
  .form-group
    = f.label :password
    = f.text_field :password, class: 'form-control', id: 'yours_user_password'
  .form-group
    = f.label :slack
    = f.text_field :slack, class: 'form-control', id: 'slack'
  .form-group
    = f.label :start_time
    = f.text_field :start_time, class: 'form-control', id: 'start_time'
  .form-group
    = f.label :end_time
    = f.text_field :end_time, class: 'form-control', id: 'end_time'
  = f.submit nil, class: 'btn btn-primary'
